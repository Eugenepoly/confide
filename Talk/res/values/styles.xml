<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:listViewStyle">@style/ListView</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BasicEditText">
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/zen_edit</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">43.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidthEditText" parent="@style/BasicEditText">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PassEditText" parent="@style/WidthEditText">
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="WrapLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">19.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ShadowTextButton" parent="@style/Button">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0px</item>
    </style>

    <style name="ListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60.0dip</item>
        <item name="android:minHeight">60.0dip</item>
    </style>

    <style name="TitleInList">
        <item name="android:textSize">@dimen/LargeTextSize</item>
        <item name="android:textColor">@color/mm_list_textcolor_one</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TipInList">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/mm_list_textcolor_two</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TimeInList" parent="@style/TipInList">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/mm_list_textcolor_time</item>
    </style>
</resources>